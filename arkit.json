{
    "$schema": "https://arkit.js.org/schema.json",
    "excludePatterns": ["test/**", "tests/**", "**/*.test.*", "**/*.spec.*, node_modules/"],
    "components": [
      {
        "type": "Dependency",
        "patterns": ["node_modules/*"]
      },
      {
        "type": "Models",
        "patterns": ["models/*.js"]
      },
      {
        "type": "Routes",
        "patterns": ["routes/*.js"]
      },
      {
        "type": "Utils",
        "patterns": ["utils/*.js"]
      },
      {
        "type": "Service",
        "patterns": ["services/*.js"]
      },
      {
        "type": "Middlewares",
        "patterns": ["middlewares/*.js"]
      },
      {
        "type": "Controllers",
        "patterns": ["controllers/*.js"]
      },
      {
        "type": "Constants",
        "patterns": ["constants/*.js"]
      },
      {
        "type": "Index",
        "patterns": ["index.js"]
      },
      {
        "type": "App",
        "patterns": ["app.js"]
      }
    ],
    "output": [
      {
        "path": "arkit.puml",
        "groups": [
          {
            "first": true,
            "type": "Index",
            "components": ["Index"]
          },
          {
            "type": "App",
            "components": ["App"]
          },
          {
            "type": "Routes",
            "components": ["Routes"]
          },
          {
            "type": "Services",
            "components": ["Services"]
          },
          {
            "type": "Controllers",
            "components": ["Controllers"]
          },
          {
            "type": "Models",
            "components": ["Models"]
          },
          {
            "type": "Utils",
            "components": ["Utils"]
          },
          {
            "type": "Middlewares",
            "components": ["Middlewares"]
          },
          {
            "type": "Constants",
            "components": ["Constants"]
          },
          {
            "type": "Services",
            "components": ["Services"]
          }
        ]
      }
    ]
  }